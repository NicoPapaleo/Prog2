package Persona;
import java.util.Date;

public class Persona {
	
	private String nombre;
	private int edad;
	//private DATE fechaDeNacimiento;
	private int dni;
	private String sexo;
	private int peso;
	private double altura;
	
	public Persona() {
	//	fechaDeNacimiento = new Date();
		nombre = "Nicolas";
		edad = 24;
		dni = 41873041;
		sexo = "Masculino";
		peso = 70;
		altura = 1.77;
	}
	
	public double calcularMasaCorporal(int peso, double altura) {
		double masa=0;
		masa = peso/(altura*altura);
		return masa;
	}
	
}
