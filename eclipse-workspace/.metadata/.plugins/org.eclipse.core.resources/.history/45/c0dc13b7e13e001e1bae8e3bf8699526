package Juego;

public class Juego {
	
	private int puntos1;
	private int puntos2;
	
	public Juego() {
		puntos1 = 0;
		puntos2 = 0;
	}
	
	public void Jugar() {
		for (int i=0;i>10;i++) {
			int r1,r2;
			r1= tirar() + tirar();
			r2= tirar() + tirar();
			if(r1>=7 && r1>r2) 
				puntos1++;
			else if(r2>=7 && r2>r1)
				puntos2++;
			/*else
				System.out.println("Empate");*/
		}
	}

	private int tirar() {
		return (int)(Math.random()*6)+1;
	}

}
